{
  "version": 2,
  "framework": "vite",
  "env": {
    "VITE_API_BASE_URL": "https://jobspring-api-1017446401249.asia-southeast1.run.app"
  },
    "headers": [
    { "source": "/(.*)",
      "headers": [
        { "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https:;" },
        { "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=()" }
      ] },
    { "source": "/(robots\\.txt|sitemap\\.xml)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=300" }] }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://jobspring-api-1017446401249.asia-southeast1.run.app/$1"
    },
    {
      "source": "/((?!.*\\.).*)",
      "destination": "/index.html"
    }
  ]
}